{
  "jade_version": "1.0.0",
  "skill_id": "mcp_gdrive_search",
  "metadata": {
    "name": "MCP Google Drive Search",
    "version": "1.0.0",
    "description": "Search files in Google Drive.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "google",
      "drive",
      "search"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_gdrive_search"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "query",
        "type": "string",
        "description": "Search query"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "files",
        "type": "array",
        "description": "Matching files"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "search",
        "action": "http_get",
        "params": {
          "url": "https://www.googleapis.com/drive/v3/files?q={{input.query}}&key={{env.GDRIVE_KEY}}",
          "headers": {
            "Authorization": "Bearer {{env.GDRIVE_TOKEN}}"
          },
          "timeout_ms": 10000
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{search.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "extract",
        "action": "json_extract",
        "params": {
          "data": "{{search.output.body}}",
          "path": "$.files[*]",
          "fields": [
            "id",
            "name",
            "mimeType"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "files": "{{extract.output.value}}"
        }
      }
    ],
    "edges": [
      {
        "from": "search",
        "to": "check"
      },
      {
        "from": "check",
        "to": "extract"
      },
      {
        "from": "extract",
        "to": "ret"
      }
    ],
    "entry_node": "search",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "www.googleapis.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": [],
    "env_whitelist": [
      "GDRIVE_KEY"
    ]
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "gdrive"
  ],
  "jade_signature": {
    "version": "1.0.0",
