{
  "jade_version": "1.0.0",
  "skill_id": "mcp_weather_forecast",
  "metadata": {
    "name": "MCP Weather Forecast",
    "version": "1.0.0",
    "description": "Get current weather and forecast for a location.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "weather",
      "forecast",
      "openweathermap"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-22T16:23:40Z",
    "updated_at": "2026-02-22T16:23:40Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_weather_forecast"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "location",
        "type": "string",
        "description": "City name or coordinates"
      }
    ],
    "optional_params": [
      {
        "name": "units",
        "type": "string",
        "description": "Units: metric or imperial",
        "default": "metric"
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "weather",
        "type": "object",
        "description": "Current weather data"
      },
      {
        "name": "location",
        "type": "string",
        "description": "Location queried"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_get",
        "params": {
          "url": "https://api.openweathermap.org/data/2.5/weather?q={{input.location}}&units={{input.units}}&appid={{env.OWM_KEY}}",
          "headers": {}
        }
      },
      {
        "id": "chk",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "ext",
        "action": "json_extract",
        "params": {
          "data": "{{fetch.output.body}}",
          "path": "$",
          "fields": [
            "main",
            "weather",
            "wind",
            "name"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "weather": "{{ext.output.value}}",
          "location": "{{input.location}}"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "chk"
      },
      {
        "from": "chk",
        "to": "ext"
      },
      {
        "from": "ext",
        "to": "ret"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.openweathermap.org"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": [],
    "env_whitelist": [
      "OWM_KEY"
    ]
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "openweathermap"
  ],
  "jade_signature": {
    "version": "1.0.0",
