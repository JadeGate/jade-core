{
  "jade_version": "1.0.0",
  "skill_id": "mcp_linear_issues",
  "metadata": {
    "name": "MCP Linear List Issues",
    "version": "1.0.0",
    "description": "List Linear project issues.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "linear",
      "project",
      "issues"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_linear_issues"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [],
    "optional_params": [
      {
        "name": "limit",
        "type": "number",
        "description": "Max issues",
        "default": 20
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "issues",
        "type": "array",
        "description": "Issue list"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_post",
        "params": {
          "url": "https://api.linear.app/graphql",
          "headers": {
            "Authorization": "{{env.LINEAR_API_KEY}}",
            "Content-Type": "application/json"
          },
          "body": {
            "query": "{ issues(first: {{input.limit | default:20}}) { nodes { id title state { name } priority assignee { name } } } }"
          },
          "timeout_ms": 10000
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "extract",
        "action": "json_extract",
        "params": {
          "data": "{{fetch.output.body}}",
          "path": "$.data.issues.nodes[*]"
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "issues": "{{extract.output.value}}"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "check"
      },
      {
        "from": "check",
        "to": "extract"
      },
      {
        "from": "extract",
        "to": "ret"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.linear.app"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "linear"
  ],
